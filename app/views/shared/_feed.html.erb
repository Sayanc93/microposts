<% if @feed_items.any? %>
  <ol class="microposts">
    <%= render @feed_items %>
  </ol>
  <%= will_paginate @feed_items %>
  <% end %>
<% if @feed_items.empty? %>
<ol class="microposts">
<p> You have followed no one or the people you follow have not posted yet.</p><br>
<p>Go find people to follow by clicking on Users tab.</p>
</ol>
<% end %>